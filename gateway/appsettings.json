{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Ocelot": {
    "Routes": [
      {
        "DownstreamPathTemplate": "/api/stakeholders/{**catchAll}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "stakeholders-api",
            "Port": 8080
          }
        ],
        "UpstreamPathTemplate": "/api/stakeholders/{**catchAll}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
      },
      {
        "DownstreamPathTemplate": "/api/followers/{**catchAll}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "followers-api",
            "Port": 8080
          }
        ],
        "UpstreamPathTemplate": "/api/followers/{**catchAll}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
      },
      {
        "DownstreamPathTemplate": "/api/tours/{**catchAll}",
        "DownstreamScheme": "http",
        "DownstreamHostAndPorts": [
          {
            "Host": "soa-tours-api-1",
            "Port": 8080
          }
        ],
        "UpstreamPathTemplate": "/api/tours/{**catchAll}",
        "UpstreamHttpMethod": [ "GET", "POST", "PUT", "DELETE" ]
      }
    ],
    "GlobalConfiguration": {
      "BaseUrl": "http://localhost:5000"
    }
  }
}